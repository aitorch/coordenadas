<h1>Lista de usuarios</h1>

<table class="table table-striped table-condensed">
  <tr>
    <th>Nombre</th>
    <th>Alianza</th>
    <th>Zona Horaria</th>
    <th># de ciudades</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
	<td><%=user.name%></td>
	<td><%=user.alianza.nombre%></td>
	<td><%=user.timezone%></td>
    <td><%=user.cities.count%></td>
    <td><%= link_to 'Mostrar', user , :class => 'btn btn-mini'%></td>
    <td><%= link_to 'Editar', edit_user_path(user) ,:class => 'btn btn-mini'%></td>
    <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Estas seguro?' } , :class => 'btn btn-mini btn-danger'%></td>
  	
</tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Usuario', new_user_path , :class => 'btn btn-primary'%>
