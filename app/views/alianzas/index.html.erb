<h1>Listado de Alianzas</h1>

<table class="table table-striped table-condensed">
  <tr>
	<th>Nombre</th>
    <th>Estado</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @alianzas.each do |alianza| %>
  <tr>
	<td><%=alianza.nombre%></td>
	<td><%=alianza.state_string%></td>
    <td><%= link_to 'Mostrar Usuarios', alianza %></td>
    <td><%= link_to 'Editar', edit_alianza_path(alianza) %></td>
    <td><%= link_to 'Eliminar', alianza, method: :delete, data: { confirm: '¿Estás Seguro?' } %></td>
  </tr>
<% end %>
</table>

